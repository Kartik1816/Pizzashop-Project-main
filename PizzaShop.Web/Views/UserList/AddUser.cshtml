@model PizzaShop.Domain.ViewModels.AddUserViewModel


            <div class="d-flex justify-content-between align-items-center m-2">
                <h2 class="page-title">Add User</Address></h2>
                <a asp-controller="UserList" asp-action="Index">
                    <button class="btn btn-contrast mx-4">
                         Back</button>
                </a>
            </div>

            <div class="form-bg mx-4 p-3 shadow my-3">
                <form action="" id="add-user-form">
                    <div class="row g-3">
                        <div class="col-12 col-sm-6 p-2 form-floating">
                            <input type="text" class="form-control" name="FirstName" id="first-name" placeholder="first-name" >
                            <label for="first-name" class="mx-2 mt-2">First Name</label>
                        </div>
                        <div class="col-12 col-sm-6 p-2 form-floating">
                            <input type="text" class="form-control" name="LastName" id="last-name" placeholder="last-name" >
                            <label for="last-name" class="mx-2 mt-2">Last Name</label>
                        </div>
                        <div class="col-12 col-sm-6 p-2 form-floating">
                            <input type="text" class="form-control" name="UsernameRequestedUser" id="user-name" placeholder="user-name" >
                            <label for="user-name" class="mx-2 mt-2">User Name</label>
                        </div>
                        <div class="col-12 col-sm-6 p-2 form-floating">
                            <select name="RoleIdRequestedUser" id="select-role" class="form-select" aria-label="Select Role">
                                    <option value="">Select Role</option>
                                @foreach (var role in ViewBag.Roles)
                                {
                                    <option value="@role.Id">@role.Name</option>
                                }
                            </select>
                            <label for="select-role" class="mx-2 mt-2">Role</label>
                        </div>
                        <!-- email -->
                        <div class="col-12 col-sm-6 p-2 form-floating">
                            <input type="email" class="form-control" name="Email" id="email" placeholder="email" >
                            <label for="email" class="mx-2 mt-2">Email</label>
                        </div>
                        <!-- status -->
                        <div class="col-12 col-sm-6 p-2 form-floating">
                            <input type="password" class="form-control" name="Password" id="password" placeholder="password" >
                            <label for="password" class="mx-2 mt-2">Password</label>
                        </div>
                        <div class="col-12 py-2 ms-3">
                            <div class="file upload position-relative overflow-hidden btn-custom">
                                <div class="d-flex flex-column justify-content-center align-items-center my-3">
                                    <img src="~/images/icons/cloud.svg" class="small-image" alt="">
                                    <span>Browse Files</span>
                                    <p id="file-name"></p>
                                </div>
                                <input type="file" id="upload-btn" class="position-absolute file-input-btn" name="ProfileImage" accept="image/*"/>
                            </div>
                        </div>
                        <div class="col-12 col-sm-4 p-2 form-floating">
                             <select name="CountryId" id="select-country" class="form-select" aria-label="Select Country">
                                <option value="">Select Country</option>
                                @foreach (var country in ViewBag.Countries)
                                {
                                    <option value="@country.Id" selected="@(Model.CountryId == country.Id)">@country.Name
                                    </option>
                                }
                            </select>
                            <label for="select-country" class="mx-2 mt-2">Country</label>
                        </div>
                        <div class="col-12 col-sm-4 p-2 form-floating">
                            <select name="StateId" id="select-state" class="form-select" aria-label="Select State">
                                <option value="">Select State</option>                          
                            </select>
                            <label for="select-state" class="mx-2 mt-2">State</label>
                        </div>
                        <div class="col-12 col-sm-4 p-2 form-floating">
                            <select name="CityId" id="select-city" class="form-select" aria-label="Select City">
                                <option value="">Select City</option>
                            </select>
                            <label for="select-city" class="mx-2 mt-2">City</label>
                        </div>
                        <div class="col-12 col-sm-4 p-2 form-floating">
                            <input type="text" class="form-control" name="ZipCode" id="zipcode" placeholder="Zipcode" >
                            <label for="first-name" class="mx-2 mt-2">Zipcode</label>
                        </div>
                        <div class="col-12 col-sm-4 p-2 form-floating">
                            <input type="text" class="form-control" name="Address" id="address" placeholder="Address" >
                            <label for="address" class="mx-2 mt-2">Address</label>
                        </div>
                        <!-- phone-number -->
                        <div class="col-12 col-sm-4 p-2 form-floating">
                            <input type="text" class="form-control" name="PhoneNumber" id="phone-number" placeholder="phone-number" >
                            <label for="phone-number" class="mx-2 mt-2">Phone Number</label>
                        </div>
                        <div class="my-3 mx-2">
                            <button type="submit" class="btn btn-primary ">Create</button>
                            <button class="btn btn-contrast mx-1">
                                <a asp-controller="UserList" asp-action="Index" class="text-decoration-none position p-3">
                                    Cancel</a>
                                </button>
                        </div>
                        <input id="userid" name="Id" class="d-none" value="@Model.Id" />

                    </div> 
                </form>
            </div>
        </div>

          <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">
                        Delete Confirmation
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex flex-column align-items-center justify-content-center">
                        <img src="./images/warning.svg" alt="" class="popup-svg" />
                        <p>Are you sure you want to delete this user?</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        No
                    </button>
                    <button type="button" class="btn btn-primary">Yes</button>
                </div>
            </div>
        </div>
    </div>

        <script src="~/js/addUser.js" asp-append-version="true"></script>