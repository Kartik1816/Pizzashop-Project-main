@model PizzaShop.Domain.ViewModels.UserViewModel
@{
    Layout=null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
     <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>

    
</head>
<body>
<div class="row body-background position-absolute h-100 backgroundImage w-100">
    <div class="d-none d-md-block col-md-6 col-sm-12">
        <img class="w-100 h-100 object-fit-cover" src="~/images/dominos_background.jpg" alt="">
    </div>
    <div class="col-md-6 col-sm-12 d-flex flex-column align-items-center justify-content-center">
        <div class="d-flex align-items-center justify-content-center no-padding">
            <img src="~/images/logos/pizzashop_logo.png" alt="" class="h-50 w-50">
            <h2 class="pizzashop-heading px-3">PIZZASHOP</h2>
        </div>
        <div class="d-flex  flex-column gap-3 justify-content-center w-100 ">
            <div class="d-flex align-items-center justify-content-start marginLeft">
                <h4>Welcome,</h4>
            </div>
            <div class="d-flex align-items-center justify-content-center flex-column">
                <form class="form-container d-flex flex-column gap-3"  id="login-form" >
                     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="d-flex flex-column ">
                        <div class="input-group" class="py-2 d-flex flex-column">
                          
                            <input type="email" class="form-control" placeholder="Email*" id="email" asp-for="@Model.Email">
                            <img src="~/images/person.svg" alt="" class="tiny-svg">
                    
                        </div>
                        <p id="email-error" class="text-danger"></p>
                    </div>

                    <div>
                    <div class="input-group">
                        <input type="password" class="form-control input::-ms-reveal"  placeholder="Password*"
                            id="password" asp-for="@Model.Password">
                        <img src="~/images/show-password.svg" onclick="showPassword()" class="tiny-svg "
                            id="showpassword" />
                        <img src="~/images/hide-password.svg" onclick="showPassword()" class="tiny-svg d-none"
                            id="hidepassword" />

                    </div>
                        <p id="password-error" class="text-danger"></p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-check mb-3">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" name="remember" id="remember-me"> Remember me
                            </label>
                        </div>

                        <div>
                            <a asp-controller="ForgotPassword" asp-action="Index" class="forgot-password">Forgot password?
                            </a>
                            
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                   
                </form>
                 <p id="login-error"  class="text-danger"></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/login.js" asp-append-version="true"></script>
    </body>
</html>