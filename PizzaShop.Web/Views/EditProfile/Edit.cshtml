 @model PizzaShop.Domain.ViewModels.EditProfileViewModel

 @{
    string profileImagePath = string.IsNullOrEmpty(@Model.ProfileImageURL)
    ? "/images/default-profile.png"
    : $"/images/profile-images/{@Model.ProfileImageURL}";
}

 <div class="add-user-back">
                <div class="mt-3 me-3 ms-4 d-flex flex-column ">
                    <div class="d-flex justify-content-between">
                        <h2 class="page-title">My Profile</h2>
                    </div>

                    <div class="col-12 user-form-back my-2 shadow-lg">
                        <div>
                            <img src="~/images/profile_div_bg.jpg" alt="" class="w-100 cover-image">

                            <div class="d-flex  mx-5">
                    <img src="@profileImagePath" alt="" class="default-pfp mx-4">
                       <label for="upload-btn" id="upload-label">
                        <img src="~/images/camera.svg" class="upload-camera"  alt="" >
                    </label>
                                
                                <div class="d-flex justify-content-between w-100">
                                    <div class="d-flex  flex-column mt-3">
                                        <h3>@Model.UserName</h3>
                                        <p>@Model.Role</p>
                                    </div>
                                    <div class="mt-4">
                                        <p>@Model.Email</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <form class=" px-5" id="edit-profile-form">
                            <div class="row mb-3 px-4">
                            
                    <input type="file" id="upload-btn" asp-for="@Model.ProfileImage"
                        class="position-absolute file-input-btn" name="ProfileImage"  style="display: none;" />
                    
                                <div class="col-xl-6 px-3 col-lg-6 col-md-12 col-sm-12 mt-3 ">
                                    <div class="form-floating ">
                                        <input  type="text" class="form-control" id="fname" placeholder="Kartik" asp-for="@Model.FirstName" value=@Model.FirstName>
                                        <label for="fname">FirstName</label>
                                    </div>
                                </div>
                                <div class=" col-xl-6 col-lg-6 px-3 col-md-12 col-sm-12 mt-3 ">
                                    <div class="form-floating">
                                        <input  type="text" class="form-control" id="lname" placeholder="kumar" asp-for="@Model.LastName" value=@Model.LastName>
                                        <label for="lname">LastName</label>
                                    </div>
                                </div>
                                <div class=" col-xl-6 col-lg-6 px-3 col-md-12 col-sm-12 mt-3 ">
                                    <div class="form-floating">
                                        <input  type="text" class="form-control" id="uname" placeholder="Kartik18" asp-for="@Model.UserName" value=@Model.UserName>
                                        <label for="uname">UserName</label>
                                    </div>
                                </div>

                                <div class=" col-xl-6 col-lg-6 px-3 col-md-12 col-sm-12 mt-3 ">
                                    <div class="form-floating ">
                                        <input  type="tel" class="form-control" id="phone" placeholder="Kartik" asp-for="@Model.Phone" value=@Model.Phone>
                                        <label for="phone">Phone</label>
                                    </div>
                                </div>

                                <div class=" col-xl-4 col-lg-4 px-3 col-md-12 col-sm-12 mt-3 ">
                                    <div class="form-floating">
                                        <select class="form-select" id="select-country" aria-label="Floating label select example" asp-for="@Model.CountryId">
                                            @foreach (var country in ViewBag.Countries)
                                            {
                                                <option value="@country.Id" selected="@(Model.CountryId == country.Id)">@country.Name</option>
                                            }
                                        </select>
                                        <label class="" for="floatingSelect">Country</label>
                                    </div>
                                </div>
                                <div class=" col-xl-4 col-lg-4 px-3 col-md-12 col-sm-12 mt-3 ">
                                    <div class="form-floating">
                                        <select class="form-select" id="select-state" aria-label="Floating label select example" asp-for="@Model.StateId">
                                            @foreach (var state in ViewBag.States)
                                            {
                                                <option value="@state.Id" selected="@(Model.StateId == state.Id)">@state.Name</option>
                                            }
                                        </select>
                                        <label class="" for="floatingSelect">State</label>
                                    </div>
                                </div>
                                <div class=" col-xl-4 col-lg-4 px-3 col-md-12 col-sm-12 mt-3 ">
                                    <div class="form-floating">
                                    <select class="form-select" id="select-city" aria-label="Floating label select example" asp-for="@Model.CityId">
                                        @foreach (var city in ViewBag.Cities)
                                        {
                                            <option value="@city.Id" selected="@(Model.CityId == city.Id)">@city.Name</option>
                                        }
                                    </select>
                                        <label class="" for="floatingSelect">City</label>
                                    </div>
                                </div>


                                <div class="col-xl-8 col-lg-8 px-3 col-md-12 col-sm-12 mt-3 ">
                                    <div class="form-floating ">
                                        <textarea  class="form-control" placeholder="Leave a comment here"
                                            id="floatingTextarea" asp-for="@Model.Address"></textarea>
                                        <label for="floatingTextarea" class="ms-3">Address</label>
                                    </div>
                                </div>

                                <div class="col-xl-4 col-lg-4 px-3 col-md-12 col-sm-12 mt-3 ">
                                    <div class="form-floating ">
                                        <input  type="number" class="form-control" id="zcode" placeholder="Kartik" asp-for=@Model.ZipCode>
                                        <label for="zcode">Zipcode</label>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-end px-3 mt-3">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                    <a asp-controller="EditProfile" asp-action="Index" class="text-decoration-none"><button type="button"
                                            class="btn cancle-back mx-4"> Back</button></a>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    
    <script src="~/js/editProfile.js" asp-append-version="true"></script>
