@model PizzaShop.Domain.ViewModels.RolesAndPermissionViewModel   
        <div class="add-user-back">
            <div class="mt-3 me-3 ms-4 d-flex flex-column col-12 col-sm-8">
                <div class="table-user mt-5 mx-2 shadow-lg p-3">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var role in Model.Roles)
                            {
                                <tr>
                                    <td>@role.Name</td>
                                    <td>
                                        <a onclick="editpermission(@role.Id)" ><button class="btn btn-light btn-sm"><i class="fas fa-pencil"></i></button></a>
                                    </td>
                                </tr>
                            }
                           
                        </tbody>
                    </table>
            </div>
            </div>
        </div>
<script>
    function editpermission(id) {
        window.location.href = "/RolesAndPermission/Permission/"+id;
    }
</script>